<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main4Activity">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/goback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="goback1"
        app:backgroundTint="@android:color/holo_blue_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <ListView
        android:id="@+id/dynamic"
        style="@style/Widget.AppCompat.ListView.DropDown"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:entries="@array/Cost"
        app:layout_constraintBottom_toTopOf="@+id/goback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </ListView>

    <TextView
        android:id="@+id/att"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="9dp"
        android:layout_weight="1"
        android:text="0"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btt"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginEnd="44dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/att" />

    <TextView
        android:id="@+id/btt6"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginEnd="44dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btt" />

    <TextView
        android:id="@+id/btt5"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginEnd="44dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btt6" />

    <TextView
        android:id="@+id/btt4"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginEnd="44dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btt3" />

    <TextView
        android:id="@+id/btt3"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginEnd="44dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btt5" />

</android.support.constraint.ConstraintLayout>